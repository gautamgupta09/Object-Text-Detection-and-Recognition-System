<BottomSheetMain>:
    orientation: "vertical"
    MDIconButton:
        icon: "close"
        pos_hint: { "center_x": .5}
        user_font_size: "25sp"
        on_press: app.manager.pop()
    MDCard:
        orientation: "vertical"
        pos_hint: {"center_x": .5, "center_y": .5}
        elevation: 10
        ScrollView:
            StackLayout:
                id: gallery_stack_layout
                spacing: "5dp", "5dp"
                MDCard:
                    size_hint: 0.25, 0.15
                    Button:
                        background_normal: "images/1.jpg"
                        on_press: app.manager.chooseImage("images/1.jpg")
                MDCard:
                    size_hint: 0.25, 0.15
                    Button:
                        background_normal: "images/2.jpg"
                        on_press: app.manager.chooseImage("images/2.jpg")
                MDCard:
                    size_hint: 0.25, 0.15
                    Button:
                        background_normal: "images/3.jpg"
                        on_press: app.manager.chooseImage("images/3.jpg")
                MDCard:
                    size_hint: 0.25, 0.15
                    Button:
                        background_normal: "images/4.png"
                        on_press: app.manager.chooseImage("images/4.png")
                MDCard:
                    size_hint: 0.25, 0.15
                    Button:
                        background_normal: "images/5.jpg"
                        on_press: app.manager.chooseImage("images/5.jpg")
                MDCard:
                    size_hint: 0.25, 0.15
                    Button:
                        background_normal: "images/6.jpg"
