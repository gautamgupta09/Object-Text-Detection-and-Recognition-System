#:import Clipboard kivy.core.clipboard.Clipboard

<BottomSheetTR>:
    MDCard:
        orientation: "vertical"
        pos_hint: {"center_x": .5, "center_y": .5}
        elevation: 10
        MDIconButton:
            icon: "close"
            user_font_size: "25sp"
            pos_hint: { "center_x": .5}
            on_press: app.manager.pop(); app.manager.deleteCapturedImage(root.image_path)
        BoxLayout:
            orientation: "vertical"
            MDCard:
                size_hint: .95, 0.6
                elevation: 20
                pos_hint: { "center_x": .5}
                Image:
                    source: root.image_path
                    allow_stretch: True
            MDCard:
                size_hint: .95, 0.3
                pos_hint: { "center_x": .5}
                TextInput:
                    id: my_tr_text_input
                    text: root.text
                    pos_hint: { "center_x": .5}
            MDCard:
                size_hint: .95, 0.1
                pos_hint: { "center_x": .5}
        MDRaisedButton:
            text: "Copy to Clipboard"
            pos_hint: {"center_x": .5, "center_y": .9}
            md_bg_color: app.theme_cls.primary_color
            on_press: Clipboard.copy(data=root.text)